<% if (post.link){ %>
  <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url">
    <h2 itemprop="name">
      <%= post.title %>
    </h2>
  </a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><h2 itemprop="name"><%= post.title %></h2></a>
  <% } else { %>
    <h2 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h2>
  <% } %>
<% } %>